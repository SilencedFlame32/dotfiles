-CFG de Spy:
bind ALT "disguise 8 -2"

alias e_scout "disguise 1 -1
alias e_sniper "disguise 2 -1
alias e_soldier "disguise 3 -1
alias e_demoman "disguise 4 -1
alias e_medic "disguise 5 -1
alias e_hwguy "disguise 6 -1
alias e_pyro "disguise 7 -1
alias e_spy "disguise 8 -1
alias e_engineer "disguise 9 -1

alias a_scout "disguise 1 -2
alias a_sniper "disguise 2 -2
alias a_soldier "disguise 3 -2
alias a_demoman "disguise 4 -2
alias a_medic "disguise 5 -2
alias a_hwguy "disguise 6 -2
alias a_pyro "disguise 7 -2
alias a_spy "disguise 8 -2
alias a_engineer "disguise 9 -2

alias dropdisguise "echo DISGUISE_DROP;disguise 8 -2"

bind 1 e_pyro
bind 2 e_engineer
bind 3 e_medic
bind 4 e_sniper
bind 5 e_spy
bind 6 e_scout
bind 7 e_demoman
bind 8 e_soldier
bind 9 e_hwguy

alias +f_disg "bind 1 a_pyro; bind 2 a_engineer; bind 3 a_medic; bind 4 a_sniper; bind 5 a_spy; bind 6 a_scout; bind 7 a_demoman; bind 8 a_soldier; bind 9 a_hwguy"
alias -f_disg "bind 1 e_pyro; bind 2 e_engineer; bind 3 e_medic; bind 4 e_sniper; bind 5 e_spy; bind 6 e_scout; bind 7 e_demoman; bind 8 e_soldier; bind 9 e_hwguy"

bind CTRL +f_disg
